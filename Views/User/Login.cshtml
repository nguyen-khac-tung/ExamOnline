@model ExamationOnline.ViewModels.AccountLoginVM

<div id="notifytoast-container" class="position-fixed top-0 mx-auto p-4 toast-container">
    <div id="notifytoast" class="toast mx-auto bg-info text-white border-0" role="alert" aria-live="assertive"
         aria-atomic="true">
        <div class="toast-header justify-content-between bg-info text-white border-bottom-0">
            <div class="text-white">
                <i class="fa-solid fa-circle-check pe-1"></i> <strong class="me-auto">Note:</strong>
            </div>
            <button type="button" class="text-end border-0 bg-transparent text-white fs-18 p-0 hover-opacity"
                    data-bs-dismiss="toast" aria-label="Close">
                X
            </button>
        </div>
        <div class="toast-body bg-info text-white border-0">
        </div>
    </div>
</div>

<div id="selectedtoast-container" class="position-fixed top-0 start-0 end-0 mx-auto p-4 toast-container">
    <div id="selectedtoast" class="toast mx-auto bg-info text-white border-0" role="alert" aria-live="assertive"
         aria-atomic="true">
        <div class="d-flex bg-info">
            <div class="toast-body bg-info text-white border-0">
            </div>
            <button type="button" class="me-2 m-auto border-0 text-white bg-transparent fs-18 p-0 hover-opacity"
                    data-bs-dismiss="toast" aria-label="Close">
                X
            </button>
        </div>
    </div>
</div>

<div class="my-5"></div>

<section class="py-10 px-3 px-sm-5">
    <div class="container">
        <div class="row justify-content-start align-items-start gx-0 gx-sm-5">
            <div class="col-lg-6 pt-5 pt-lg-0 order-1 order-lg-0">
                <img src="~/ahome/assets/login.jpg" class="img-fluid w-100 rounded" alt="" />
            </div>
            <div class="col-lg-6 order-0 order-lg-1">
                <h1 class="fw600 pb-2 title-lg"><span class="color-primarycolor">Login</span> To ExamEase</h1>
                <div class="pb-3">Fill your username and password to sign in.</div>
                <div class="pb-2 text-edit">
                    Lecture Username: <span class="fw600">john@u.com</span>, Password: <span class="fw600">@@1</span>
                </div>
                <div class="pb-2 text-edit">
                    Student Username: <span class="fw600">emma@s.com</span>, Password: <span class="fw600">@@1</span>
                </div>
                @if (ViewBag.Message != null)
                {
                    <div class="mb-3">
                        <div class="alert alert-danger alert-dismissible fade show rounded-0 py-2">
                            <span>@ViewBag.Message</span>
                            <button type="button" class="btn-close pt-2" data-bs-dismiss="alert"></button>
                        </div>
                    </div>
                }
                <form action="/User/Login" class="form-horizontal pt-2"
                      method="post" role="form">
                    <div class="mb-3 text-break">
                        <div class="form-group">
                            <label class="form-label required fw600" asp-for="Email">Email</label>
                            <input class="form-control text-box single-line" asp-for="Email" placeholder="Enter your email" />
                            <span class="invalid-message field-validation-valid" asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="mb-3 text-break">
                        <div class="form-group">
                            <label class="form-label required fw600" asp-for="Password">Password</label>
                            <input class="form-control text-box single-line password" asp-for="Password"
                                   type="password" class="form-control" placeholder="Enter your password" />
                            <span class="invalid-message field-validation-valid" asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row gx-0 mb-4">
                    </div>
                    <button type="submit" class="btn form-btn btn-primary hover-boxshadow hover-moveup">
                        Submit
                    </button>
                    <input name="__RequestVerificationToken" type="hidden"
                           value="CfDJ8L4QY66g-BRJl2ARhB8lcxceYViQRjZflKzPyedBJBtz5HRNRN7PPccyLoLUn01MZFvevdCcj3fhDhuAmSxTyQrE9MOyYV5KsrsCG-A4CLJrrf30iPXAzhhuGIU_YhbpmUxITPP8GJxRAFjYDIzg7j0" /><input name="RememberMe" type="hidden" value="false" />
                </form>
            </div>
        </div>
    </div>
</section>
