
<div id="notifytoast-container" class="position-fixed top-0 mx-auto p-4 toast-container">
    <div id="notifytoast" class="toast mx-auto bg-info text-white border-0" role="alert" aria-live="assertive"
         aria-atomic="true">
        <div class="toast-header justify-content-between bg-info text-white border-bottom-0">
            <div class="text-white">
                <i class="fa-solid fa-circle-check pe-1"></i> <strong class="me-auto">Note:</strong>
            </div>
            <button type="button" class="text-end border-0 bg-transparent text-white fs-18 p-0 hover-opacity"
                    data-bs-dismiss="toast" aria-label="Close">
                X
            </button>
        </div>
        <div class="toast-body bg-info text-white border-0">
        </div>
    </div>
</div>

<div id="selectedtoast-container" class="position-fixed top-0 start-0 end-0 mx-auto p-4 toast-container">
    <div id="selectedtoast" class="toast mx-auto bg-info text-white border-0" role="alert" aria-live="assertive"
         aria-atomic="true">
        <div class="d-flex bg-info">
            <div class="toast-body bg-info text-white border-0">
            </div>
            <button type="button" class="me-2 m-auto border-0 text-white bg-transparent fs-18 p-0 hover-opacity"
                    data-bs-dismiss="toast" aria-label="Close">
                X
            </button>
        </div>
    </div>
</div>

<div class="my-5"></div>

<section class="py-10 px-3 px-sm-5">
    <div class="container">
        <div class="row justify-content-start align-items-start gx-0 gx-sm-5">
            <div class="col-lg-6 pt-5 pt-lg-0 order-1 order-lg-0">
                <img src="~/ahome/assets/register.jpg" class="img-fluid w-100 rounded" alt="" />
            </div>
            <div class="col-lg-6 order-0 order-lg-1">
                <h1 class="fw600 pb-2 text-capitalizetitle-lg">
                    <span class="color-primarycolor">Sign Up</span>
                    An Account
                </h1>
                <div class="pb-3">Fill your details to register.</div>
                @if (ViewBag.Message != null)
                {
                    <div class="mb-3">
                        <div class="alert alert-danger alert-dismissible fade show rounded-0 py-2">
                            <span>@ViewBag.Message</span>
                            <button type="button" class="btn-close pt-2" data-bs-dismiss="alert"></button>
                        </div>
                    </div>
                }
                <form action="/User/Register" class="form-horizontal"
                      method="post" role="form">
                    <div class="mb-3 text-break">
                        <div class="form-group">
                            <label class="form-label required fw600" for="FullName">FullName</label>
                            <input class="form-control text-box single-line" data-val="true"
                                   data-val-maxlength="Maximum length allowed is 256 characters."
                                   data-val-maxlength-max="256"
                                   data-val-required="The FullName field is required." id="FullName"
                                   maxlength="256" name="FullName" type="text" value="" />
                            <span class="invalid-message field-validation-valid" data-valmsg-for="FullName"
                                  data-valmsg-replace="true"></span>
                        </div>
                    </div>
                    <div class="mb-3 text-break">
                        <div class="form-group">
                            <label class="form-label required fw600" for="Email">Email Address</label>
                            <input class="form-control text-box single-line" data-val="true"
                                   data-val-email="The Email Address field is not a valid e-mail address."
                                   data-val-maxlength="Maximum length allowed is 256 characters."
                                   data-val-maxlength-max="256"
                                   data-val-required="The Email Address field is required." id="Email"
                                   maxlength="256" name="Email" type="email" value="" />
                            <span class="invalid-message field-validation-valid" data-valmsg-for="Email"
                                  data-valmsg-replace="true"></span>
                        </div>
                    </div>
                    <div class="mb-3 text-break">
                        <div class="form-group">
                            <label class="form-label required fw600" for="Password">Password</label>
                            <input class="form-control text-box single-line password" data-val="true"
                                   data-val-length="The field must be at least 2 characters long."
                                   data-val-length-max="100" data-val-length-min="2"
                                   data-val-required="The Password field is required." id="Password"
                                   maxlength="100" name="Password" type="password" />
                            <span class="invalid-message field-validation-valid" data-valmsg-for="Password"
                                  data-valmsg-replace="true"></span>
                        </div>
                    </div>
                    <div class="mb-3 text-break">
                        <div class="form-group">
                            <label class="form-label required fw600" for="ConfirmPassword">
                                Confirm Password
                            </label>
                            <input class="form-control text-box single-line password" data-val="true"
                                   data-val-equalto="The password and confirmation password do not match."
                                   data-val-equalto-other="*.Password" id="ConfirmPassword" name="ConfirmPassword"
                                   type="password" />
                            <span class="invalid-message field-validation-valid"
                                  data-valmsg-for="ConfirmPassword" data-valmsg-replace="true"></span>
                        </div>
                    </div>
                    <button type="submit" class="btn form-btn btn-primary hover-boxshadow hover-moveup">
                        Sign Up
                    </button>
                    <input name="__RequestVerificationToken" type="hidden"
                           value="CfDJ8L4QY66g-BRJl2ARhB8lcxcOBU8xlTpQIBq_1C5etCLdJbdea8tOMYj4nkvyPhQln3g83cvTs6Pswp6bIROkf0vWnQZUpdDeQyt7go1VFJxIxAVP8lGduuxoafJfgxYqwN9QLR7g0qN_X-84Xzf2qcg" />
                </form>
            </div>
        </div>
    </div>
</section>