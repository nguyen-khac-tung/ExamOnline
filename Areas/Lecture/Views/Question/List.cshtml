

<div class="row">
    <div class="col-12">
        <div class="page-title-box d-sm-flex align-items-center justify-content-between">
            <h4 class="pagetitle mb-sm-0 fw600">Question Management</h4>
        </div>
    </div>
</div>

<section class="section dashboard mt-3 position-relative w-100 h-100">
    <div class="bg-white rounded p-3 shadow position-relative w-100 h-100">
        <div class="pb-2">
            <a class="btn form-btn btn-primary hover-boxshadow hover-moveup" href="/question/edit">
                <i class="fa-solid fa-plus pe-1"></i> Add New Record
            </a>
            <a href="/question/import"
               class="btn form-btn btn-secondary hover-boxshadow cursor-pointer hover-moveup">
                <i class="fa-solid fa-file-excel pe-1"></i> Import From Excel
            </a>
            <span onclick="exportToExcel('question', 'Please wait. Table is still loading. Click this after table is loaded.')"
                  data-bs-toggle="tooltip" data-bs-placement="right"
                  title="You can control what you want to export to Excel before clicking this. For example, if you wish to export all the records, click &quot;Show All&quot; at the drop-down button below before clicking &quot;Export to Excel.&quot;"
                  class="btn form-btn btn-secondary hover-boxshadow cursor-pointer hover-moveup">
                <i class="fa-solid fa-file-excel pe-1"></i> Export to Excel
            </span>
            <span onclick="exportToPdf('question', 'Please wait. Table is still loading. Click this after table is loaded.')"
                  data-bs-toggle="tooltip" data-bs-placement="right"
                  title="You can control what you want to export to PDF before clicking this. For example, if you wish to export all the records, click &quot;Show All&quot; at the drop-down button below before clicking &quot;Export to PDF.&quot;"
                  class="btn form-btn btn-secondary hover-boxshadow cursor-pointer hover-moveup">
                <i class="fa-solid fa-file-pdf pe-1"></i> Export to Pdf
            </span>
        </div>
        <div class="spinner-container d-none">
            <div class="spinner d-flex justify-content-center align-items-center text-center color-primarycolor py-5">
                <div class="py-3">
                    <div class="spinner-border ml-auto" role="status" aria-hidden="true"></div><strong>
                        &nbsp;
                        Loading...
                    </strong>
                </div>
            </div>
        </div>
        <div id="question-partialview">
            <!-- display a dummy empty table while loading the data -->
            <div class="table-responsive mb-5">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="thead"></th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
            <div class="py-4"></div>
            <div class="dummyfooter row justify-content-between mt-5">
                <div class="col-md-6">Showing 0 to 0 of 0 entries</div>
                <div class="col-md-6 text-end">Page 0 of Page 0</div>
            </div>
        </div>
    </div>
</section>

@section ScriptOptional {
    <script>
        $(document).ready(function() {
            // Khởi tạo biến lưu trạng thái hiện tại
            let currentState = {
                search: "",
                page: 1,
                pageSize: 5,
                sortBy: "",
                sortDir: "desc"
            };
            
            // Tải dữ liệu ban đầu
            loadQuestionData();

            // Sự kiện tìm kiếm
            $(document).on("click", "#btnSearch", function () {
                currentState.search = $("#searchInput").val();
                currentState.page = 1;
                loadQuestionData();
            });

            // Tìm kiếm khi nhấn Enter
            $(document).on("keypress", "#searchInput", function (e) {
                if (e.which === 13) {
                    currentState.search = $(this).val();
                    currentState.page = 1;
                    loadQuestionData();
                    return false; // Ngăn form submit nếu có
                }
            });

            // Thay đổi số lượng bản ghi trên trang
            $(document).on("change", "#pageSizeSelect", function () {
                currentState.pageSize = $(this).val();
                currentState.page = 1;
                loadQuestionData();
            });

            // Sự kiện sắp xếp
            $(document).on("click", ".sortable", function () {
                const column = $(this).data("sort");

                // Nếu là cùng một cột, đảo chiều sắp xếp
                if (currentState.sortBy === column) {
                    currentState.sortDir = currentState.sortDir === "asc" ? "desc" : "asc";
                } else {
                    // Nếu là cột khác, đặt là cột mới và sắp xếp tăng dần
                    currentState.sortBy = column;
                    currentState.sortDir = "asc";
                }

                loadQuestionData();
            });

            // Sự kiện phân trang
            $(document).on("click", ".pagination .page-link", function() {
                const page = $(this).data("page");
                if (page && !$(this).parent().hasClass("disabled")) {
                    currentState.page = page;
                    loadQuestionData();
                }
            });
            
            // Hiển thị thông báo thành công
            @if (TempData["SuccessMessage"] != null)
            {
                <text>
                $('.toast-body').html('@TempData["SuccessMessage"]');
                $('#notifytoast').removeClass('bg-danger').addClass('bg-info');
                $('.toast-header').removeClass('bg-danger').addClass('bg-info');
                var toast = new bootstrap.Toast(document.getElementById('notifytoast'));
                toast.show();
                </text>
            }
            
            // Hiển thị thông báo lỗi
            @if (TempData["ErrorMessage"] != null)
            {
                <text>
                $('.toast-body').html('@TempData["ErrorMessage"]');
                $('#notifytoast').removeClass('bg-info').addClass('bg-danger');
                $('.toast-header').removeClass('bg-info').addClass('bg-danger');
                var toast = new bootstrap.Toast(document.getElementById('notifytoast'));
                toast.show();
                </text>
            }
            
            // Hàm tải dữ liệu sử dụng Ajax
            function loadQuestionData() {
                $(".spinner-container").removeClass("d-none");
                
                $.ajax({
                    url: "/Lecture/Question/GetPartialViewListing",
                    type: "GET",
                    data: {
                        search: currentState.search,
                        page: currentState.page,
                        pageSize: currentState.pageSize,
                        sortBy: currentState.sortBy,
                        sortDir: currentState.sortDir
                    },
                    success: function(data) {
                        $("#question-partialview").html(data);
                    },
                    error: function(xhr, status, error) {
                        console.error("Error loading questions:", error);
                        
                        // Hiển thị thông báo lỗi
                        $('.toast-body').html("Error loading questions. Please try again.");
                        $('#notifytoast').removeClass('bg-info').addClass('bg-danger');
                        $('.toast-header').removeClass('bg-info').addClass('bg-danger');
                        var toast = new bootstrap.Toast(document.getElementById('notifytoast'));
                        toast.show();
                    },
                    complete: function() {
                        $(".spinner-container").addClass("d-none");
                    }
                });
            }
        });
        
        // Hàm kích hoạt modal xác nhận xóa
        function triggerDeleteConfirmationModal(deleteUrl) {
            $('#confirmDeleteModal').modal('show');
            $('#confirmed-deletebtn').attr('data-url', deleteUrl);
            
            // Xử lý sự kiện khi nhấn nút xác nhận xóa
            $('#confirmed-deletebtn').off('click').on('click', function() {
                const url = $(this).attr('data-url');
                window.location = url;
            });
        }
    </script>
}